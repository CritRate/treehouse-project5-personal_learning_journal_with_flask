<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="x-ua-compatible" content="ie=edge" />
		{% block title %} {% endblock %}
		<link
			href="https://fonts.googleapis.com/css?family=Cousine:400"
			rel="stylesheet"
			type="text/css"
		/>
		<link
			href="https://fonts.googleapis.com/css?family=Work+Sans:600"
			rel="stylesheet"
			type="text/css"
		/>
		<link
			href="https://fonts.googleapis.com/icon?family=Material+Icons"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="/static/css/normalize.css" />
		<link rel="stylesheet" href="/static/css/site.css?verion=1.19" />
	</head>
	<body>
		<header>
			<div class="container">
				<div class="site-header">
					<a class="logo" href="{{ url_for('index') }}"
						><i class="material-icons">library_books</i></a
					>
					{% if current_user.is_authenticated %}
					<a class="button icon-right" href="{{ url_for('logout') }}"
						><span>Log Out</span> <i class="material-icons">add</i></a
					>
					<a
						class="button icon-right"
						href="{{ url_for('new_entry') }}"
						style="margin-right: 20px"
						><span>New Entry</span> <i class="material-icons">add</i></a
					>
                    <a class="button icon-right" style="margin-right: 20px"
						><span>{{ current_user.username }}</span> <i class="material-icons">face</i></a
					>
					{% else %}
					<a class="button icon-right" href="{{ url_for('login') }}"
						><span>Log In</span> <i class="material-icons">add</i></a
					>
					<a
						class="button icon-right"
						href="{{ url_for('register') }}"
						style="margin-right: 20px"
						><span>Create User</span> <i class="material-icons">add</i></a
					>
					{% endif %}
				</div>
			</div>
		</header>
		<section>
			<div class="container">
				<div class="entry-list">
					{% with messages = get_flashed_messages() %} 
                        {% if messages %} 
                            {% for message in messages %}
					            <div class="flash">{{ message }}</div>
					            <br />
					        {% endfor %} 
                        {% endif %} 
                    {% endwith %} 
                    {% block content %} 
                    {% endblock %}
				</div>
			</div>
			{% block bottom %}
            {% endblock %}
		</section>
		<footer>
			<div>
				&copy; MyJournal
			</div>
		</footer>
	</body>
</html>
